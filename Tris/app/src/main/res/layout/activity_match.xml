<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreadattero.tris.Match">

    <GridLayout
        android:layout_width="238dp"
        android:layout_height="224dp"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="7dp"
        android:id="@+id/gridLayout"
        android:background="@color/colorPrimaryDark"
        >

        <ImageButton
            android:id="@+id/button0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:transitionName="1"
            android:onClick="buttonTris"
            />
        <ImageButton
            android:id="@+id/button1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:transitionName="2"
            android:onClick="buttonTris"
            />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:onClick="buttonTris"
            android:transitionName="3"
            />
        <ImageButton
            android:id="@+id/button3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:onClick="buttonTris"
            android:transitionName="4"
            />
        <ImageButton
            android:id="@+id/button4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:onClick="buttonTris"
            android:transitionName="5"
            />
        <ImageButton
            android:id="@+id/button5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:onClick="buttonTris"
            android:transitionName="6"
            />
        <ImageButton
            android:id="@+id/button6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:onClick="buttonTris"
            android:transitionName="7"
            />
        <ImageButton
            android:id="@+id/button7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:onClick="buttonTris"
            android:transitionName="8"
            />

        <ImageButton
            android:id="@+id/button8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:transitionName="9"
            android:onClick="buttonTris"
            />
    </GridLayout>

    <TextView
        android:id="@+id/testo"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textSize="30dp"
        android:text="" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Home"
        android:onClick="home"
        />

</RelativeLayout>
